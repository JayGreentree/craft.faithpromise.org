{% set entries = craft.entries({ section: 'events', relatedTo: matrix_block.ministry }) %}

{% if entries | length %}

    {% embed '_layout/section.twig' with params %}
        {% block body %}
            {% include '_layout/components/entry_cards.twig' with { 'entries': entries } %}

            <div class="Section-actions">
                <a class="Button" href="/events">View All Events</a>
            </div>
        {% endblock %}

    {% endembed %}

{% endif %}