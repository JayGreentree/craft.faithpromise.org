{% set entries = craft.entries({
section: 'campuses',
with: ['campusPhoto', 'serviceTimes']
}) %}

{% if entries | length %}

    {% embed '_layout/section.twig' with params %}
        {% block body %}
            {% include '_layout/components/entry_cards.twig' with { 'entries': entries, 'compact': true } %}
        {% endblock %}
    {% endembed %}

{% endif %}