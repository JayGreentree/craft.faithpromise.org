{% for matrix_block in entry.pageContent %}

    {% set params = {
    title: matrix_block['blockTitle'] is defined ? matrix_block.blockTitle : null,
    subtitle: matrix_block['subtitle'] is defined ? matrix_block.subtitle : null,
    text: matrix_block['text'] is defined ? matrix_block.text : null,
    linkUrl_1: matrix_block['linkUrl_1'] is defined ? matrix_block.linkUrl_1 : '',
    linkText_1: matrix_block['linkText_1'] is defined ? matrix_block.linkText_1 : '',
    linkUrl_2: matrix_block['linkUrl_2'] is defined ? matrix_block.linkUrl_2 : '',
    linkText_2: matrix_block['linkText_2'] is defined ? matrix_block.linkText_2 : '',
    align: matrix_block['align'] is defined ? matrix_block.align : 'left',
    background: matrix_block['background'] is defined ? matrix_block.background : 'default',
    videoUrl: matrix_block['videoUrl'] is defined and matrix_block.videoUrl | length ? matrix_block.videoUrl : false,
    image: matrix_block['image'] is defined and matrix_block.image | length ? matrix_block.image[0] : false,
    imageTall: matrix_block['imageTall'] is defined and matrix_block.imageTall | length ? matrix_block.imageTall[0] : false,
    imageWide: matrix_block['imageWide'] is defined and matrix_block.imageWide | length ? matrix_block.imageWide[0] : false,
    imageLayout: matrix_block['imageLayout'] is defined ? matrix_block.imageLayout : 'default',
    headerVideo: matrix_block['headerVideo'] is defined and matrix_block.headerVideo | length ? matrix_block.headerVideo[0] : null,
    id: is defined matrix_block['sectionId'] ? matrix_block.sectionId : 'matrix-block-' ~ matrix_block['id'],
    } %}

    {% include 'sections/pages/page_content_matrix/' ~ matrix_block.type ~ '.twig' ignore missing %}

{% endfor %}